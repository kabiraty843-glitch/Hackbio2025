    #!/bin/bash
    #Stage 0 project
    #part 1
    #question 1
echo "Yusuf Kabirat Opeyemi'
    #question 2
mkdir Yusuf_Kabirat_Opeyemi
    #question 3 
mkdir biocomputing && cd biocomputing
    #question 4
wget https://raw.githubusercontent.com/josoga2/dataset-repos/main/wildtype.fna
wget https://raw.githubusercontent.com/josoga2/dataset-repos/main/wildtype.gbk
wget https://raw.githubusercontent.com/josoga2/dataset-repos/main/wildtype.gbk
    #question 5
mv wildtype.fna Yusuf_Kabirat_Opeyemi
    #question 6
rm wildtype.gbk.1
    #question 7
grep 'tatatata' ../Yusuf_Kabirat_Opeyemi/wildtype.fna
    #question 8
grep 'tatatata' wildtype.fna > mutantfile.txt
    #question 9
kabiraty843@cloudshell:~$ sed '1d' wildtype.gbk | wc -l
    #question 10
grep 'LOCUS' wildtype.gbk
    #question 11
grep 'SOURCE" wildtype.gbk
    #question 12
grep '/gene' wildtype.gbk
    #question 13
clear && history
    #question 14
ls -lh #checkin the directory contents for biocomputing
ls -lh Yusuf_Kabirat_Opeyemi #checking the directory contents for Yusuf_Kabirat_Opeyemi

   #section 2
   #question 1
conda activate base
   #question 2
conda create -n funtools
   #question 3
conda activate funtools
  #question 4
  #installation via conda
conda config --set channel_priority strict
conda install pyfiglet
  #question 5
pyfiglet "Yusuf Kabirat Opeyemi"
  #question 6
conda install -c bioconda bwa
  #question 7
conda create -n blast_env blast
  #question 8
conda install samtools
  #question 9
conda install bedtools
  #question 10
conda install spacepy
  #question 11
conda install bcftools
  #question 12
conda install fastp
  #question 13
conda install multiqc

